<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Watch Together</title>
    <style>
        body {
            margin: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #121212;
            color: #f0f0f0;
            display: flex;
            flex-direction: column;
            height: 100vh;
        }

        #header {
            padding: 20px;
            text-align: center;
            border-bottom: 1px solid #333;
        }

        #content {
            display: flex;
            flex-grow: 1;
        }

        #video-container {
            flex-grow: 2;
            padding: 20px;
            display: flex;
            flex-direction: column;
        }

        #youtube-player {
            flex-grow: 1;
            min-height: 300px;
        }

        #chat-container {
            width: 300px;
            padding: 20px;
            border-left: 1px solid #333;
            display: flex;
            flex-direction: column;
        }

        #chat-messages {
            flex-grow: 1;
            overflow-y: auto;
            margin-bottom: 10px;
        }

        #chat-input {
            display: flex;
        }

        #message-input {
            flex-grow: 1;
            padding: 8px;
            border: 1px solid #555;
            background-color: #222;
            color: #f0f0f0;
            border-radius: 4px;
            margin-right: 5px;
        }

        #send-button {
            padding: 8px 12px;
            background-color: #444;
            color: #f0f0f0;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }
        .emoji-button{
            padding: 8px 12px;
            background-color: #444;
            color: #f0f0f0;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }
        #emoji-picker {
            position: absolute;
            display: none;
            background-color: #333;
            border: 1px solid #555;
            border-radius: 4px;
            padding: 10px;
            z-index: 100;
            flex-wrap: wrap;
            width: 200px;
        }

        #emoji-picker button {
            background: none;
            border: none;
            font-size: 20px;
            cursor: pointer;
            margin: 2px;
        }
